#include "stdafx.h"
#include <iostream>
#include "conio.h"

using namespace std;

void main(){
	int edad,genero,hijos;
	cout<<"Introdusta la edad del ciudadano: "<<endl;
	cin>>edad;
	cout<<"Introdusca genero 1=masculino o 0=femenino: "<<endl;
	cin>>genero;
	 if(genero==1)
		 if(edad>=65)
			 cout<<"se puede jubilar..."<<endl;
		 else
			 cout<<"no se puede jubilar..."<<endl;
   else{
     if(genero==0){
		 cout<<"cuantos hijos tiene: "<<endl;
	     cin>>hijos;
	     if(edad>=(60-hijos)){
			 cout<<"se puede jubilar..."<<endl;
   }else{
	   cout<<"no se puede jubilar..."<<endl;
		 }
	 }
   }
 getch();
}
