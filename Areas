#include "stdafx.h"
#include <iostream>
#include "conio.h"

using namespace std;

void main(){
	float lado,base,altura,n; 
	int opcion;
     cout<<"---------------menu---------------"<<endl;
     cout<<"0.- salir del programa"<<endl;
     cout<<"1.- area del triangulo"<<endl;
     cout<<"2.- area del cuadrado"<<endl;
     cout<<"3.- area del rectangulo"<<endl;
     cin>> opcion;
 switch(opcion){
 case 0: 
	 cout<<"fin del programa"<<endl;
	 break;
 case 1: 
	 cout<<"introduzca la base"<<endl;
	 cin>>base; 
	 cout<<"introduzca la altura"<<endl;
	 cin>>altura;
	 n=base*altura;
	 cout<<"el area es: "<<n;
	 break;	  
 case 2: 
	 cout<<"introduzca el lado"<<endl;
	 cin>>lado; 
	 n=lado*lado;
	 cout<<"el area es: "<<n;
	 break;
 case 3: 
	 cout<<"introduzca la base"<<endl;
	 cin>>base; 
	 cout<<"introduzca la alutra"<<endl;
	 cin>> altura;
	 n=base*altura;
	 cout<<"el area es: "<<n;
	 break;
 default: 
	 cout<<"numero incorrecto";
	 break;
 }
getch();
}
